{
  "rules": {
    // Presence data - authenticated users can read all presence, write their own
    "presence": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    
    // Transform data - authenticated users can read all, write their own
    "transforms": {
      "$transformId": {
        ".read": "auth != null",
        ".write": "auth != null && (newData.child('updatedBy').val() == auth.uid || !data.exists())"
      }
    },
    
    // Lock data - authenticated users can claim free locks or refresh their own
    "locks": {
      "$objectId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() == auth.uid)"
      }
    },
    
    // Default rule - deny all other access
    ".read": false,
    ".write": false
  }
}
